{
  "permissions": {
    "allow": [
      "Bash(pip install:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "BashTool",
        "hooks": [
          {
            "type": "command",
            "command": ".venv\\Scripts\\activate"
          }
        ]
      }
    ]
  }
}