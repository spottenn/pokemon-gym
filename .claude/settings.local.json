{
  "permissions": {
    "allow": [
      "Bash(pip install:*)",
      "WebFetch(domain:docs.litellm.ai)",
      "Bash(python:*)",
      "Bash(pkill:*)",
      "Bash(taskkill:*)",
      "Bash(ollama:*)",
      "Bash(timeout 30 tail -f thoughts.txt)",
      "Bash(curl:*)",
      "Bash(cp:*)",
      "Bash(cmd /c:*)",
      "Bash(where python)",
      "Bash(where obs64)",
      "Bash(where obs)",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(timeout:*)",
      "Bash(/dev/null)",
      "Bash(cat:*)",
      "Bash(pip --version)",
      "Bash(where pip)",
      "Bash(echo $VIRTUAL_ENV)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "BashTool",
        "hooks": [
          {
            "type": "command",
            "command": ".venv\\Scripts\\activate"
          }
        ]
      }
    ]
  }
}