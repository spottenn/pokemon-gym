{
  "permissions": {
    "allow": [
      "Bash(pip install:*)",
      "WebFetch(domain:docs.litellm.ai)",
      "Bash(python:*)",
      "Bash(pkill:*)",
      "Bash(taskkill:*)",
      "Bash(ollama:*)",
      "Bash(timeout 30 tail -f thoughts.txt)",
      "Bash(curl:*)",
      "Bash(cp:*)",
      "Bash(cmd /c:*)",
      "Bash(where python)",
      "Bash(where obs64)",
      "Bash(where obs)",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(timeout:*)",
      "Bash(/dev/null)",
      "Bash(cat:*)",
      "Bash(pip --version)",
      "Bash(where pip)",
      "Bash(echo $VIRTUAL_ENV)",
      "Bash(curl -X POST http://localhost:8090/initialize -H \"Content-Type: application/json\" -d \"{\"\"headless\"\": true, \"\"sound\"\": false, \"\"streaming\"\": true}\" -s -o init_response.json)",
      "Bash(powershell:*)",
      "Bash(rmdir:*)",
      "Bash(gh repo create:*)",
      "Bash(mkdir:*)",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git submodule add:*)",
      "Bash(npm install:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "BashTool",
        "hooks": [
          {
            "type": "command",
            "command": ".venv\\Scripts\\activate"
          }
        ]
      }
    ]
  }
}